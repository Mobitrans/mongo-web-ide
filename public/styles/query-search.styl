  .query-search
    background-color: rgba(0,0,0,0.2)
    position: absolute
    width: 100%
    height: 100%
    z-index: 1000000

    > div:last-child
      position: absolute
      top: 10%
      left: 50%

      > div:first-child
        background: #666          
        padding: 2px
        position: relative
        left: -50%
        width: 500px

        input
          appearance: none
          background: white
          border: 1px solid #ccc
          box-sizing: border-box
          font-size: 18px
          line-height: 30px
          text-indent: 4px
          outline: none
          height: 30px
          width: 100%

        ul
          max-height: 400px 
          margin: 0px
          overflow: auto
          padding: 0px
          position: relative

          li
            border-bottom: 1px solid rgba(0,0,0,0.5)
            box-shadow: 0px 1px 0px rgba(255,255,255,0.5)
            color: white
            height: 16px
            font-size: 14px
            line-height: 16px
            list-style: none               
            overflow: hidden
            padding: 6px
            text-overflow: ellipsis
            vertical-align: middle
            white-space: nowrap

            &.highlight
              background: #888

            a
              color: white
              margin-left: 4px
              text-decoration: none     
