body 
  font-family: Lato, sans-serif
  margin: 0px
  padding: 0px
  
  .conflict-dialog
    z-index: 10

  .mongodb-info-container, .parameters, .link-generator-container
    background: linear-gradient(#454545, #222)
    box-shadow: 0 2px 12px black
    color: white;    
    font-size: 14px
    overflow: auto
    padding: 20px      
    position: absolute
    top: 64px
    z-index: 1000

  .parameters 
    width: 320px

    > div 
      margin-bottom: 8px

    input
        border: none;
        box-sizing: border-box
        color: black
        font-size: 12px
        margin: 0px
        outline: none
        padding: 5px
        vertical-align: middle
        width: 70%
      
      label
        display: inline-block
        text-align: right
        width: 90px

        &:after
          content: " :"
          margin-right: 2px
  
  .content 
    background: #272822
    font-size: 1vh
    white-space: nowrap

    > div
      display: inline-block
      vertical-align: top

    .editors
      overflow: auto

      .editor
        background: #272822

      .editor-name
        background: #1d1f20
        box-sizing: border-box
        border-bottom: 1px solid rgba(255,255,255,0.1)
        color: #999
        display: block
        font-size: 18px
        height: 40px    
        line-height: 40px
        padding: 0px 0px 0px 8px
        vertical-align: middle        

        input
          appearance: none        
          background: none
          border: none
          color: white
          font-size: 18px
          font-weight: normal
          line-height: 40px
          outline: none
          padding: 0px
          margin: 0px
          vertical-align: middle
          width: 100%
          height: 40px          

      .resize-handle.horizontal      
        background: linear-gradient(to bottom, #505050, #383838)
        cursor: row-resize
        height: 5px

    .output
        background: rgba(29, 30, 25, 0)
        color: rgb(196, 197, 180)
        overflow: auto
        position: absolute

        .horizontal, .vertical
          box-sizing: border-box

        .horizontal
          border-right: 1px solid #ccc          

        .vertical
          border-bottom: 1px solid #ccc

        pre
          font-family: "Andale Mono", monospace
          font-size: 110%
          margin: 0px !important

        svg 
          background-color: white

  .resize-handle.vertical  
    background: linear-gradient(to right, #505050, #383838)    
    border-left: 1px solid black
    border-right: 1px solid black
    box-sizing: border-box
    cursor: ew-resize
    width: 10px
    height: 100% 

  .preloader
    background: rgba(0,0,0,0.4)
    display: table
    position: absolute
    z-index: 10000    

    div
      display: table-cell;
      color: white;
      font-size: 40px;
      text-align: center;
      text-shadow: 0px 1px 0px black;
      vertical-align: middle;

  




