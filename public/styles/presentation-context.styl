svg.correlation-matrix
  font: 10px sans-serif
  padding: 10px


  .axis, .frame
    shape-rendering: crispEdges

  .axis line
    stroke: #ddd

  .axis path
    display: none

  .frame
    fill: none
    stroke: #aaa

  circle
    fill-opacity: .7

  circle.hidden
    fill: #ccc !important

  .extent
    fill: #000
    fill-opacity: .125
    stroke: #fff



.d3-tip
  line-height: 1
  padding: 12px
  background: rgba(0, 0, 0, 0.8)
  color: #fff
  border-radius: 2px
