svg.correlation-matrix
  font: 10px sans-serif
  padding: 10px


  .axis, .frame
    shape-rendering: crispEdges

  .axis line
    stroke: #ddd

  .axis path
    display: none

  .frame
    fill: none
    stroke: #aaa

  circle
    fill-opacity: .7

  circle.hidden
    fill: #ccc !important

  .extent
    fill: #000
    fill-opacity: .125
    stroke: #fff



.d3-tip
  line-height: 1
  padding: 12px
  background: rgba(0, 0, 0, 0.8)
  color: #fff
  border-radius: 2px


.regression
  .axis
    line
      stroke: black
      stroke-width: 1

    .domain
      fill: none
      stroke: #000
      shape-rendering: inherit

// multi-chart
.hide-y2 .y2 line, .hide-y1 .y1 line
  display none

.nvd3 .axis line, .axis path
  fill: none
  stroke: #e5e5e5
  shape-rendering: crispEdges