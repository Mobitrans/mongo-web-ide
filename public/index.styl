body 
  font-family: Lato, sans-serif
  margin: 0px
  padding: 0px
  
  .menu 
    background: linear-gradient(#111, #222)
    border-bottom: 1px solid rgba(255,255,255,0.2)   
    box-sizing: border-box
    display: block
    font-size: 0px
    height: 64px  
  
    a
      box-sizing: border-box
      color: white
      cursor: pointer
      display: inline-block      
      text-align: center
      text-decoration: none
      user-select: none
      vertical-align: top

      &.logo
        background-image: url(/public/images/mongodb-logo.png)
        background-position: 20px center
        background-repeat: no-repeat
        background-size: 70%                
        font-size: 28px
        line-height: 64px
        width: 180px
        height: 64px

      &.button
        background: linear-gradient(#4d4d4d, #2f2f2f)        
        border-radius: 4px
        border: 1px solid black
        font-size: 16px
        line-height: 56px
        margin-right: 4px
        position: relative
        top: 5px
        width: 90px    
        height: 54px
      
      &.toggle.button.on 
        background: yellow !important
        color: black

  .content 
    background: #272822
    font-size: 0px
    white-space: nowrap

    > div
      display: inline-block
      vertical-align: top

    .editors
      overflow: auto

      .editor
        background: #272822

      .editor-name
        background: #1d1f20
        box-sizing: border-box
        border-bottom: 1px solid rgba(255,255,255,0.1)
        color: #999
        display: block
        font-size: 18px
        height: 40px    
        line-height: 40px
        padding: 0px 0px 0px 8px
        vertical-align: middle        

        input
          appearance: none        
          background: none
          border: none
          color: white
          font-size: 18px
          font-weight: normal
          line-height: 40px
          outline: none
          padding: 0px
          margin: 0px
          vertical-align: middle
          width: 100%
          height: 40px          

      .resize-handle.horizontal      
        background: linear-gradient(to bottom, #505050, #383838)
        cursor: row-resize
        height: 5px

    .output
        background: white
        overflow: auto

        pre
          font-size: 14px
          margin: 0px !important

  .resize-handle.vertical  
    background: linear-gradient(to right, #505050, #383838)    
    border-left: 1px solid black
    border-right: 1px solid black
    box-sizing: border-box
    cursor: ew-resize
    width: 10px
    height: 100% 

  .preloader
    background: rgba(0,0,0,0.4)
    display: table
    position: absolute
    z-index: 10000    

    div
      display: table-cell;
      color: white;
      font-size: 40px;
      text-align: center;
      text-shadow: 0px 1px 0px black;
      vertical-align: middle;

  .query-search
    position: absolute
    width: 100%
    height: 100%
    z-index: 1000000

    .dismiss-area
      background-color: rgba(0,0,0,0.2)
      position: absolute
      width: 100%
      height: 100%

    > div:last-child
      position: absolute
      top: 10%
      left: 50%

      > div:first-child
        background: #666
        max-height: 400px 
        overflow: auto
        padding-bottom: 1px
        position: relative
        left: -50%
        width: 400px

        input
          appearance: none
          background: white
          border: 1px solid #ccc
          box-sizing: border-box
          font-size: 16px
          line-height: 30px
          text-indent: 4px
          outline: none
          position: relative
          left: 2px
          top: 2px
          height: 30px
          width: 396px

        ul
          margin: 0px
          padding: 0px

          li
            border-bottom: 1px solid rgba(0,0,0,0.5)
            box-shadow: 0px 1px 0px rgba(255,255,255,0.5)
            height: 24px
            font-size: 14px
            line-height: 24px
            list-style: none 
            margin-top: 4px
            vertical-align: middle

            a
              margin-left: 4px
              text-decoration: none
              color: white







