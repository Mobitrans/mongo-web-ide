@import 'nib'

body 
    
    font-family: Helvetica

    .button
        border: 1px solid #ccc
        border-radius: 4px
        cursor: pointer
        display: inline-block
        font-size: 12px
        margin: 8px
        padding: 8px

    .hide 
        display: none !important

    #editor        
        width: 640px
        height: 400px

    #transformer
        margin-top: 10px
        width: 640px
        height: 120px

    #presenter
        margin-top: 10px
        width: 640px
        height: 120px

    #execute-mongo-query, #preloader
        display: inline-block
        vertical-align: top

    #preloader
        background-image: url(/public/images/fading-dots.gif)
        margin: 8px        
        width: 32px
        height: 32px        

    #result
        width: 640px


    svg 
        width: 640px
        height: 480px


